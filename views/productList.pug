html 
  head 
    meta(charset="utf-8")
    //- link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    link(rel="stylesheet", href="/css/bootstrap.css")
    script(src="/js/bootstrap.js", type="text/javascript") 
  body(style="margin: 10px 20px;")
    div.container(style="margin-top: 10px;")
      p.col-12(style="text-align:center; font-size:20px; margin: 0") ABC Store
      p.col-12(style="text-align:center; font-size:16px; margin-bottom: 0;") Surat, Gujarat, India
      hr(style="margin: 0;")
      p.col-12(style="text-align:center; font-size:16px; margin-bottom: 0;") Products
      hr(style="margin: 0;")
      br
      .row.row-cols-1.row-cols-4.g-3(style="font-size: 14px")
        each row in products 
          if row.is_active
            //- a(href="/product/" + row.id, title=row.name, style="text-decoration: none; color: black;")
            a(href="", title=row.name, style="text-decoration: none; color: black;")
              .col
                .card.h-100 
                  img.img-fluid.card-img-top(src=row.image, alt="Product Image")
                  .card-body 
                    h6.card-title #{row.name}
                    p.card-text #{row.hsncode}
                    p.card-text #{row.description}